/* pages/order/order.wxss */
.container{
  height: 100%;
}
.orderList{
  width: 100%;
  padding: 20rpx;
  border: 100rpx 0;
  border-style: solid;
  border-color: #ECECEC;
}
.order-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
}
.order-title-restaurantName{
  width: 500rpx;
  height: 100%;
  font-size: 32rpx;
}
.order-title-state{
  width: 200rpx;
  color: #D2D2D2;
  margin-right: 30rpx;
  font-size: 28rpx;
}
.order-content{
  padding: 50rpx 0 50rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC; 
}
.order-commodity{
  padding: 50rpx 0 50rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC; 
}
.order-content-restaurantImg{
  width: 200rpx;
  height: 125rpx;
}

.order-content-info-howToDistribute{
  width: 350rpx;
  line-height: 42rpx;
  margin-left: 30rpx;
}
.order-content-info-price{
  color: red;
  font-size: 30rpx;
  margin-left: 400rpx;
  position: absolute;
}
.order-footer{
  width: 100%;
  height: 90rpx;
  display: flex;
  margin-left: 500rpx;
  font-size: 28rpx;
}
.order-footer-orderAgain{
  margin-top: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
}
.order-footer-orderAgain{
  margin-right: 20rpx;
}
.order-footer-submit{
  margin-top: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
  background: #13BA84;
  color: #ffffff;
}