/* pages/order/order.wxss */
.container{
  height: 100%;
}
.orderList{
  width: 100%;
  padding: 20rpx;
  border: 100rpx 0;
  border-style: solid;
  border-color: #ECECEC;
}
.order-title{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #ECECEC;
  display: flex;
  justify-content: space-between;
}
.order-title-restaurantName{
  width: 500rpx;
  height: 100%;
  font-size: 32rpx;
}
.order-title-state{
  width: 130rpx;
  color: #D2D2D2;
  margin-right: 30rpx;
  font-size: 28rpx;
}
.order-content{
  padding: 50rpx 0 50rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC; 
}
.order-content-restaurantImg{
  width: 200rpx;
  height: 125rpx;
}
.order-content-info{
  font-size: 25rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.order-content-info-howToDistribute{

  line-height: 42rpx;
  margin-left: 30rpx;
}
.order-content-info-price{
  color: red;
  font-size: 30rpx;
  margin-left: 400rpx;
  position: absolute;
}
.order-footer{
  width: 100%;
  margin-top: 15rpx;
  height: 90rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
}
.order-footer-address{
  margin-right: 80rpx; 
  color: #8C8B8B;
}
.order-footer-goToComment,.order-footer-orderAgain{
  margin-right: 40rpx; 
  height: 60rpx;
  line-height: 60rpx;
  width: 180rpx;
  text-align: center;
  border: 1rpx solid #ECECEC;
}
.order-footer-orderAgain{
  border: 1rpx solid #ECECEC;
  margin-right: 20rpx;
}
.order-footer-goToComment{
  border: 1rpx solid #ECECEC;
  background: #13BA84;
  color: #ffffff;
}