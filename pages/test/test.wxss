/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  max-height: 650rpx;
  width: 100%;
  overflow: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.sure{
  height: 100rpx;
  border: 1px solid black;
  position: fixed;
  bottom: 0;
}
.shopCar{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid black;
}
.mealDetail{
  width: 100%;
  
  border-bottom: 1px solid black;
}
.bottom{
  height: 130rpx;
  width: 100%;
  border-bottom: 1px solid black;
}
