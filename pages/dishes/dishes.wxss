/* 搜索模块 */
.searchMoudle{
  height: 100rpx;
  background-color: #13BA84;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.searchorder{
  height:80rpx;
  width:80rpx;
}
.search{
  border-radius: 10rpx;
  background-color: #ffffff;
  height: 60rpx;
  width: 650rpx;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;
  align-items: center;
}
.searchIcon{
  height: 45rpx;
  width: 45rpx;
  margin-left:8rpx;
  float: left;
}
.searchInput{
  border: 1rpx solid #ffffff;
  font-size:32rpx;
  width:100%;
}
.searchIcon:hover{
  cursor: pointer;
}

/* 排序菜单模块 */
.sortMoudle{
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 36rpx;
  background-color: #ffffff;
}
.sortMoudleLeft{
  display: flex;
  justify-content: center;
  width: 50%;
  float: left;
  border-right: 1rpx solid black;
}
.sortMoudleRight{
  display: flex;
  justify-content: center;
  width: 50%;
  float: left;
  border-left: 1rpx solid black;
}
.sortMoudlePraise{
  margin:5rpx 0 0 5rpx;
  width: 45rpx;
  height: 45rpx;
}
.sortMoudlePrice{
  margin:5rpx 0 0 5rpx;
  width: 45rpx;
  height: 45rpx;
}

/* 菜品模块 */
.dishesMoudle{
  margin-top: 20rpx;
}
/* 选择菜品菜单模块 */
.active{ 
  background-color: #13BA84;
  color: #ffffff;
}
.dishesMoudleLeft{
  margin-right: 5%;
  float: left;
  width: 30%;
  background-color: #EBEBEB;
  height:880rpx;
}
.single{
  border-top: 8rpx solid #13BA84;
  border-bottom: 8rpx solid #13BA84;
}
.package{
  border-top: 8rpx solid #13BA84;
  border-bottom: 8rpx solid #13BA84;
}
.single view, .package view{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 85rpx;
  border-bottom: 5rpx solid #E5E5E7; 
}
/*  菜品展示模块  */
.dishesMoudleRight{
  
  width:65%;
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.evaluation{
  color: #13BA84;
}
.dishesMoudleRight::after{
  content: "";
  display: block;
  clear: both;
}
.starImage{
  width: 40rpx;
  height: 40rpx;
}
.mealPic{
  float: left;
  width: 180rpx;
  height: 180rpx;
}
.info{
  width: 270rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size:32rpx;
  float: left;
  margin-left: 20rpx;
}
.mealInfoTop{
  overflow: auto;
}
.mealInfo{
  float:left;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #E5E5E7;
  
}
.description, .sale{
  color: #D7D7D7;
  display: block;
  font-size: 28rpx;
  width: 440rpx;
}
.mealPrice{
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: red;
}
.mealName{
  display: flex;
  flex-wrap: wrap;
  font-size: 36rpx;
}
.minusImage{
  width: 37rpx;
  height: 37rpx;
}
.signImage{
  width: 40rpx;
  height: 40rpx;
}
.hidden{
  display: none;
}
/*******************************/
.shopCar{
  margin-left: 30rpx;
  width: 60rpx;
  height: 60rpx;
}
.buyMoudle{
  height: 120rpx;
  line-height: 120rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  background-color: white;
}
.buyMoudleCar{
  float: left;
  width: 70%;
  height: 120rpx;
}
.buyMoudleCalculation{
  position: static;
  
  height: 120rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  background-color: #13BA84; 
  float: right;
  width: 30%;
}
.totalMoney{
  color: red;
  font-size: 48rpx;
}
.startingCondition{
  font-size: 32rpx;
}
/* 购物车详情信息 */
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  max-height: 650rpx;
  width: 100%;
  overflow: auto;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
 
}
.sure{
  height: 100rpx;
  border: 1px solid black;
  position: fixed;
  bottom: 0;
}

.mealDetail{
  padding: 0 20rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid black;
  
}
.bottom{
  height: 120rpx;
  display: flex;
  justify-content: space-between;
 
}
.spreadMoney{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: white;
  background-color: #13BA84; 

  width: 30%;

}
.bottomSpread{
  font-size: 30rpx;
  color: rgb(228, 226, 226);
  
}
.deleteShopCar{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  background-color:  rgb(228, 226, 226);
  height: 100rpx;
  line-height: 100rpx;
  font-size:32rpx;
  padding-right: 30rpx;
  
}

.bottomTotalMoney{
 
  width: 70%;
  font-size: 60rpx;
  color: red;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 20rpx;
}
