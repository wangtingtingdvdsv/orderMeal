
/* pages/submit/submit.wxss */
page{
  background-color: #B0B0B0;
}
.submit{
  background-color: #13BA84;
  height: 100rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
}

.peopleInfoMoudle{
  position: relative;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 95%;
  height: 270rpx;
  background-color: rgba(255, 255, 255, 0.493);
}
.mealInfoMoudle{

  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: rgba(255, 255, 255, 0.493); 
}
picker {
display:block;
}
.time{
  
  height: 100%;
  width: 100%;
  line-height: 86rpx;
  position: absolute;
  left: 80rpx;
  bottom: -10rpx;

}
.timeIcon{

  height: 50rpx;
  width: 50rpx;
  
}

.locationIconBox, .timeIconBox{
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.locationIcon{

  height: 50rpx;
  width: 50rpx;

}
.peopleInfoMoudleLocation{
  position: relative;
  width: 100%;
  height: 170rpx;
  border-bottom: 2rpx solid #E5E5E7; 
  
}
.arrow{
  
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  top: 65rpx;
  right:40rpx;
}
.timeArrow{
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  bottom: 20rpx;
  right:40rpx;
}
.deliveryTime{
  position: relative;
  width: 100%;
  height: 86rpx;
}
.details{
  position: absolute;
  
  left: 80rpx;
  

  top: 50%;
  margin-top: -50rpx;
}
.num{
  position: absolute;
  right: 49%;
}
.mealName{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mealInfoMoudle{
  padding: 0 20rpx;
}
.name{
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid gray; 
}
.totalMoney{
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 100rpx;
  border-top: 1rpx solid gray; 
}

